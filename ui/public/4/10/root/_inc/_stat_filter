              <div class="statistics">
                <label for="statistics_item">Статистика:</label>
                <select id="statistics_item" name="stat_period" onchange="javascript:document.filter.submit()">
                  [% stat_periods = [
                       { value = 'custom', title = 'выбранный период' },
                       { value = 'today', title = 'сегодня' },
                       { value = 'yesterday', title = 'вчера' },
                       { value = 'week', title = '7 дней' },
                       { value = 'month', title = '30 дней' },
                       { value = 'cur_month', title = 'текущий месяц' },
                       { value = 'last_month', title = 'предыдущий месяц' }
                     ]
                  %]
                  [% FOREACH period IN stat_periods %]
                  <option value="[% period.value %]" [% IF period.value == filter.stat_period %] selected="" [% END %]>[% period.title %]</option>
                  [% END %]
                </select>

            <div class="period" style="margin-right:1em;">
                с  <input id="startDate" type="text" readonly=""/><input type="hidden" name="start_date" id="startDate_hidden"/>
                по  <input id="stopDate" type="text" readonly=""/><input type="hidden" name="stop_date" id="stopDate_hidden"/>
                <img class="ui-icon reload" alt="" title="Применить выбранный период" id="period-reload"/>
            </div>
            <script type="text/javascript">

            var fnFilterSubmit = function() {
                document.filter.submit();
            };

            jQuery(function($) {
                initDateRange(
                    {elmValue: 'start_date', elmInput: '#startDate', extra: {buttonImageOnly: true, buttonImage: "/img/i_calendar_.gif", showOn: "both", maxDate: '+0d'}},
                    {elmValue: 'stop_date', elmInput: '#stopDate', extra: {buttonImageOnly: true, buttonImage: "/img/i_calendar_.gif", showOn: "both", maxDate: '+0d'}}
                );

                $('#startDate').datepicker('option', 'onSelect', function(dateText, instance) { $("#statistics_item [value='custom']").attr("selected", "selected");});
                $('#stopDate') .datepicker('option', 'onSelect', function(dateText, instance) {$("#statistics_item [value='custom']").attr("selected", "selected");});

                $('#startDate').datepicker( "setDate", new Date([% filter.start_date.strftime('%Y,%m-1,%d,%H,%M,%S') %]));
                $('#stopDate') .datepicker( "setDate", new Date([% filter.stop_date.strftime('%Y,%m-1,%d,%H,%M,%S')%]));

				$('#period-reload').click(fnFilterSubmit);
            });
            </script>
          </div>


