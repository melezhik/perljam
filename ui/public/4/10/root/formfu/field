<dl class="inline" >

[% IF self.label.defined && self.label_tag == 'legend' %]
[% INCLUDE $self.label_filename %]
[% END %]

[% IF self.label.defined && self.label_tag != 'legend' && !self.reverse_single %]
[% INCLUDE $self.label_filename %]
[% END %]

<dd class="value">
    [% IF self.container_tag.defined %]<[% self.container_tag %][% process_attrs(self.container_attributes) %]>[% END %]
        [% content %]

        [% IF self.label.defined && self.label_tag != 'legend' && self.reverse_single %]
        [% INCLUDE $self.label_filename %]
        [% END %]

        [% IF self.javascript.defined %]
        <script type="text/javascript">
        [% self.javascript %]
        </script>
        [% END %]
    [% IF self.container_tag.defined %]</[% self.container_tag %]>[% END %]
    [% IF self.errors %]
        [% FOREACH error = self.errors %]
        <div>
        <span class="error [% error.class %]">[% error.message %]</span>
        </div>
        [% END %]
    [% END %]

    [% IF self.comment.defined %]
    <div>
        <span class="hint"[% process_attrs(self.comment_attributes) %]>
        [% self.comment %]
        </span>
    </div>
    [% END %]
</dd>
</dl>
