  <tr>
    <td valign=top>
<pre>
<% @pinto_diff.each do |l| %>
  <%= l  %>
<% end %>
</pre>
   </td>
    <td valign=top>
  <%= raw(@snapshot_diff) %>
  <strong>Change Log</strong>
  <table class="table-bordered table-striped table">
  <tr>
    <th>Time</th>
    <th>Commiter</th>
    <th>Action</th>
  </tr>
  <% @history.each do |l| %>
  <tr>
    <td>
        <%= l[:created_at].strftime('%B %d, %Y at %H:%M')  %>
    </td>
    <td>
        <%= l[:commiter].nil? ? 'anonimous' : begin c = Resolv.new.getname(l[:commiter]) rescue l[:commiter] else c end   %>
    </td>
    <td>
        <%= l[:action] %>
    </td>
  </tr>  
  <% end %>
  </table>
   </td>
    <td>
        <%= form_for([@project, @build], url: { action: "changes" }, method: :get  ) do |f| %>
             <%= f.select :id, options_for_select(@project.builds.reverse.map {|b| b.id}) %>
             <%= f.submit "Compare" %> 
       <% end %>
    </td>
 </tr>
