
<strong>Build Log </strong> |  
    <%= link_to 'Back To Project', project_path(@project) %> |

<pre>
  <strong>Project Title:</strong> <%= @project.title %>
  <strong>Project ID:</strong> <%= @project.id %>
  <strong>Build ID:</strong> <%= @build.id %>
  <strong>State:</strong> <%= @build.state %>
</pre>

<% if ! @build.comment.nil?  %>
  <strong>Annotation:</strong>
<pre>
<%= @build.comment %>
</pre>
<% end %>


  <strong>Full Log</strong>  |
    <%= link_to "Last #{@build.recent_log_entries_number} entries", project_build_path(@project,@build), :title => 'Last Entries' %> |
    <%= link_to 'Distributions List', list_project_build_path(@project,@build), :title => 'list of disribution archives' %> |
    <%= link_to 'Configuration', configuration_project_build_path(@project,@build), :title => 'show build configuration' %> |
    <%= link_to 'Changes', changes_project_build_path(@project,@build), :title => 'changes for this build' %>
    <pre>
    <%- i = 0 %>	
    <% @log_entries.each do |l| %>
        <%= link_to "[#{i+=1}]", "##{i}", :id => "#{i+10}"  %> [<%= l.level %>] <%= l.updated_at.strftime('%B %d, %Y at %H:%M') %> <%= l.chunk  %>
    <% end %>
    </pre>

