<pre>
  <strong>Title:</strong> <%= @project.title %>
  <strong>Description:</strong> <%= @project.text %>
</pre>

<pre>
  <strong>Project's Recent Activities</strong>
</pre>

  <table class="table-bordered table-striped table">
  <tr>
    <th>Date</th>
    <th>Commiter</th>
    <th>Action</th>
  </tr>
  <% @history.each do |l| %>
  <tr>
    <td>
        <%= l[:created_at]  %>
    </td>
    <td>
        <%= l[:commiter].nil? ? 'anonimous' : begin c = Resolv.new.getname(l[:commiter]) rescue l[:commiter] else c end   %>
    </td>
    <td>
        <%= l[:action] %>
    </td>
  </tr>
  <% end %>
  </table>

