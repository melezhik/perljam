<h1>Projects List</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @projects.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.text %></td>
      <td><%= link_to 'Show', project_path(item) %></td>
      <td><%= link_to 'Edit', edit_project_path(item) %></td>
      <td><%= link_to 'Delete', project_path(item), method: :delete, data: { confirm:    "You are about to delete project # #{item[:id]}. Are you shure ?" }  %></td>
    </tr>
  <% end %>
</table>

