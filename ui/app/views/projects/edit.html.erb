<h2>Edit project <%= link_to "ID:#{@project[:id]}",  project_path(@project[:id]) %></h2>

<%= render 'form' %>

<h2>Add a source</h2>
<%= form_for([@project, @project.sources.build]) do |f| %>
  <p>
    <%= f.label :scm_type %>
    <%= f.select :scm_type, options_for_select(%w[svn git]) %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

